{
  "name": "@terminal/root",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "./scripts/dev.sh",
    "app": "./scripts/dev.sh app",
    "dev:web": "pnpm --filter @terminal/web dev",
    "dev:api": "pnpm --filter @terminal/api dev",
    "dev:gateway": "cd gateway && uv run gateway",
    "dev:proxy": "pnpm --filter @terminal/proxy dev",
    "dev:docker": "docker compose -f infra/docker-compose.dev.yml up -d",
    "dev:docker:stop": "docker compose -f infra/docker-compose.dev.yml down",
    "test:gateway": "cd gateway && uv run gateway-tests",
    "coverage:gateway": "cd gateway && uv run gateway-coverage",
    "lambda:package": "pnpm --filter @terminal/lambda-scheduler package",
    "build": "pnpm run --recursive build",
    "lint": "pnpm run --recursive lint",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "pnpm run --recursive typecheck",
    "clean": "pnpm run --recursive clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^25.0.0",
    "eslint": "^9.39.1",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  },
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.24.0"
}