# Azure Entra ID Configuration
ENTRA_TENANT_ID=your-tenant-id-here
ENTRA_CLIENT_ID=your-client-id-here
ENTRA_API_AUDIENCE=api://your-client-id-here

# Server Configuration
PORT=3001
CORS_ORIGIN=http://localhost:5173

# DynamoDB Configuration
# For local development, use DynamoDB Local
DYNAMODB_ENDPOINT=http://127.0.0.1:8042
DYNAMODB_TABLE_NAME=terminal

# Encryption Key for stored credentials (32 bytes hex = 64 chars)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
CREDENTIALS_ENCRYPTION_KEY=7a8f2c1d9e4b3a6c5d8f2e1a4b7c9d0e3f6a8b2c5d7e9f1a3c6d8e0b2f4a7c9d

